          `;
          
        case 'followup':
          return `
            <div class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-lg p-4 max-w-md mx-auto">
              <div class="text-center">
                <span class="text-3xl mb-2">üîî</span>
                <p class="font-semibold">Everything Set to Happen Automatically</p>
                <div class="grid grid-cols-3 gap-2 mt-3 text-xs">
                  <div class="text-center">
                    <div class="text-xl">üìß</div>
                    <p>Confirmation</p>
                    <p class="text-gray-500">Now</p>
                  </div>
                  <div class="text-center">
                    <div class="text-xl">üì±</div>
                    <p>Reminder</p>
                    <p class="text-gray-500">Day before</p>
                  </div>
                  <div class="text-center">
                    <div class="text-xl">‚≠ê</div>
                    <p>Review ask</p>
                    <p class="text-gray-500">Day after</p>
                  </div>
                </div>
              </div>
            </div>
          `;
          
        default:
          return '';
      }
    }
  }
}
</script>

<style>
  @keyframes slide-down {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  .animate-slide-down {
    animation: slide-down 0.5s ease-out forwards;
  }
  
  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }
  
  .animation-delay-200 {
    animation-delay: 200ms;
  }
</style>