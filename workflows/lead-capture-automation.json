{
  "name": "Lead Capture & Follow-Up Automation",
  "nodes": [
    {
      "parameters": {
        "path": "new-lead",
        "options": {}
      },
      "id": "webhook-trigger",
      "name": "Webhook - Lead Form",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1.1,
      "position": [250, 300],
      "webhookId": "lead-capture-webhook"
    },
    {
      "parameters": {
        "operation": "append",
        "sheetId": "YOUR_SHEET_ID",
        "range": "A:E",
        "options": {}
      },
      "id": "google-sheets",
      "name": "Add to Google Sheets",
      "type": "n8n-nodes-base.googleSheets",
      "typeVersion": 4,
      "position": [450, 300],
      "credentials": {
        "googleSheetsOAuth2Api": {
          "id": "1",
          "name": "Google Sheets account"
        }
      }
    },
    {
      "parameters": {
        "fromEmail": "{{ $json.business_email }}",
        "toEmail": "{{ $json.email }}",
        "subject": "Thanks for your interest in {{ $json.business_name }}!",
        "emailFormat": "html",
        "html": "<h2>Hi {{ $json.name }},</h2><p>Thank you for reaching out! We've received your inquiry and will get back to you within 24 hours.</p><p>In the meantime, feel free to check out our website for more information.</p><p>Best regards,<br>{{ $json.business_name }} Team</p>",
        "options": {}
      },
      "id": "send-email",
      "name": "Send Thank You Email",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 2,
      "position": [650, 200],
      "credentials": {
        "smtp": {
          "id": "2",
          "name": "SMTP account"
        }
      }
    },
    {
      "parameters": {
        "content": "New lead from {{ $json.name }}!\n\nEmail: {{ $json.email }}\nPhone: {{ $json.phone }}\nMessage: {{ $json.message }}\n\nRespond quickly!",
        "additionalFields": {}
      },
      "id": "sms-notification",
      "name": "SMS Alert to Owner",
      "type": "n8n-nodes-base.twilio",
      "typeVersion": 1,
      "position": [650, 400],
      "credentials": {
        "twilioApi": {
          "id": "3",
          "name": "Twilio account"
        }
      }
    },
    {
      "parameters": {
        "conditions": {
          "number": [
            {
              "value1": "={{ $json.lead_score }}",
              "operation": "largerEqual",
              "value2": 7
            }
          ]
        }
      },
      "id": "if-high-value",
      "name": "IF High Value Lead",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [850, 300]
    },
    {
      "parameters": {
        "channel": "#hot-leads",
        "text": "ðŸ”¥ HIGH VALUE LEAD ALERT! ðŸ”¥\n\nName: {{ $json.name }}\nCompany: {{ $json.company }}\nBudget: ${{ $json.budget }}\n\nThis lead scored {{ $json.lead_score }}/10. Reach out IMMEDIATELY!",
        "otherOptions": {}
      },
      "id": "slack-alert",
      "name": "Slack Hot Lead Alert",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 2,
      "position": [1050, 250],
      "credentials": {
        "slackApi": {
          "id": "4",
          "name": "Slack account"
        }
      }
    }
  ],
  "connections": {
    "webhook-trigger": {
      "main": [
        [
          {
            "node": "google-sheets",
            "type": "main",
            "index": 0
          },
          {
            "node": "send-email",
            "type": "main",
            "index": 0
          },
          {
            "node": "sms-notification",
            "type": "main",
            "index": 0
          },
          {
            "node": "if-high-value",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "if-high-value": {
      "main": [
        [
          {
            "node": "slack-alert",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "executionOrder": "v1"
  },
  "staticData": null,
  "meta": {
    "instanceId": "ct-business-automations"
  },
  "tags": [
    {
      "name": "Client Template",
      "createdAt": "2024-01-22T12:00:00.000Z"
    }
  ]
}