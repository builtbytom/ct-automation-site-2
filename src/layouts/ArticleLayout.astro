---
import Layout from './Layout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import TableOfContents from '../components/TableOfContents.astro';
import AuthorBox from '../components/AuthorBox.astro';
import RelatedArticles from '../components/RelatedArticles.astro';

export interface Props {
  title: string;
  description: string;
  category: string;
  readTime: string;
  publishDate: string;
  updatedDate?: string;
  relatedArticles?: Array<{
    title: string;
    slug: string;
    category: string;
    readTime: string;
  }>;
}

const { title, description, category, readTime, publishDate, updatedDate, relatedArticles = [] } = Astro.props;

// Generate breadcrumb items
const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Resources', href: '/resources' },
  { label: category, href: `/resources/${category.toLowerCase().replace(/\s+/g, '-')}` },
  { label: title, href: '#', current: true }
];
---

<Layout title={`${title} - Connecticut Business Automation`} description={description}>
  <!-- Article Header -->
  <section class="bg-gradient-to-br from-navy-900 to-navy-800 text-white py-12">
    <div class="container mx-auto px-6">
      <Breadcrumbs items={breadcrumbs} />
      
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold mt-6 mb-4">
        {title}
      </h1>
      
      <div class="flex flex-wrap items-center gap-4 text-gray-300">
        <span class="flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          {readTime} read
        </span>
        <span class="flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          Published {new Date(publishDate).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
        </span>
        {updatedDate && (
          <span class="text-sm italic">
            (Updated {new Date(updatedDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })})
          </span>
        )}
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <div class="bg-white py-12">
    <div class="container mx-auto px-6">
      <div class="lg:grid lg:grid-cols-12 lg:gap-12">
        <!-- Table of Contents (Desktop) -->
        <aside class="hidden lg:block lg:col-span-3">
          <div class="sticky top-8">
            <TableOfContents />
          </div>
        </aside>

        <!-- Article Content -->
        <article class="lg:col-span-9 max-w-none">
          <!-- Mobile TOC -->
          <div class="lg:hidden mb-8 p-6 bg-cream rounded-lg">
            <TableOfContents mobile={true} />
          </div>

          <!-- Main article content -->
          <div class="prose prose-lg max-w-none 
            prose-headings:font-display prose-headings:text-charcoal
            prose-h2:text-3xl prose-h2:mt-12 prose-h2:mb-6
            prose-h3:text-2xl prose-h3:mt-8 prose-h3:mb-4
            prose-p:text-charcoal prose-p:leading-relaxed
            prose-a:text-coral-500 prose-a:no-underline hover:prose-a:underline
            prose-strong:text-charcoal prose-strong:font-semibold
            prose-ul:my-6 prose-ol:my-6
            prose-li:my-2 prose-li:text-charcoal
            prose-blockquote:border-l-4 prose-blockquote:border-coral-400 prose-blockquote:pl-6 prose-blockquote:italic
            prose-blockquote:text-gray-700 prose-blockquote:my-8
            prose-code:bg-gray-100 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm
            prose-pre:bg-navy-900 prose-pre:text-gray-100"
          >
            <slot />
          </div>

          <!-- Callout Boxes Styles -->
          <style is:global>
            .callout {
              @apply my-8 p-6 rounded-lg border-2;
            }
            
            .callout-info {
              @apply bg-blue-50 border-blue-200;
            }
            
            .callout-success {
              @apply bg-green-50 border-green-200;
            }
            
            .callout-warning {
              @apply bg-yellow-50 border-yellow-200;
            }
            
            .callout-calculator {
              @apply bg-coral-50 border-coral-300;
            }
            
            .callout h3 {
              @apply text-xl font-semibold mb-3 mt-0;
            }
            
            .roi-highlight {
              @apply bg-coral-50 border-2 border-coral-300 rounded-lg p-6 my-8;
            }
            
            .roi-highlight .number {
              @apply text-3xl font-bold text-coral-600;
            }
          </style>

          <!-- Author Box -->
          <div class="mt-12 pt-8 border-t border-gray-200">
            <AuthorBox />
          </div>
        </article>
      </div>
    </div>
  </div>

  <!-- Related Articles -->
  {relatedArticles.length > 0 && (
    <section class="bg-cream py-16">
      <div class="container mx-auto px-6">
        <RelatedArticles articles={relatedArticles} />
      </div>
    </section>
  )}

  <!-- Bottom CTA -->
  <section class="bg-navy-900 text-white py-16">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl font-display font-bold mb-4">
        Ready to Stop Wasting Time?
      </h2>
      <p class="text-xl mb-8 text-gray-300 max-w-2xl mx-auto">
        Let's talk about what's eating your day and whether automation makes sense for your Connecticut business.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="tel:2032000327" 
          class="inline-flex items-center justify-center bg-coral-500 hover:bg-coral-600 text-white px-8 py-4 rounded-lg font-medium transition-colors duration-200 text-lg"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call (203) 200-0327
        </a>
        <a 
          href="/contact" 
          class="inline-flex items-center justify-center bg-transparent border-2 border-white hover:bg-white hover:text-navy-900 text-white px-8 py-4 rounded-lg font-medium transition-all duration-200 text-lg"
        >
          Schedule a Quick Call
        </a>
      </div>
    </div>
  </section>
</Layout>