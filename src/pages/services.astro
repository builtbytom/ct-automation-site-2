    50% {
      transform: translateY(-10px);
    }
  }
  
  @keyframes spin {
    from {
      transform: translateX(-50%) rotate(0deg);
    }
    to {
      transform: translateX(-50%) rotate(360deg);
    }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  
  .animate-spin {
    animation: spin linear infinite;
  }
</style>