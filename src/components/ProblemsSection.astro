        <div class="p-8 h-full flex flex-col">
          <!-- Header -->
          <div class="flex items-center justify-between mb-6">
            <h3 class="font-display text-2xl text-charcoal">The File Name Nightmare</h3>
            <div class="text-3xl">üîç</div>
          </div>
          
          <!-- Visual -->
          <div class="relative bg-gradient-to-br from-amber-50 to-yellow-100 rounded-xl p-6 mb-6">
