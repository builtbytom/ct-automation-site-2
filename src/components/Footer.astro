  <div class="container mx-auto px-6 py-12">
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Company Info -->
      <div>
        <h3 class="text-2xl font-display font-bold mb-4">CT Business Automations</h3>
        <p class="text-gray-300 mb-4">
          Helping Connecticut businesses work smarter, not harder. No buzzwords, just results.
        </p>
        <p class="text-gray-400">
          By Tom Lucia<br>
          <a href="mailto:tom@ctbusinessautomations.com" class="text-coral-400 hover:text-coral-300 transition-colors">
            tom@ctbusinessautomations.com
          </a><br>
          <a href="tel:203-200-0327" class="text-coral-400 hover:text-coral-300 transition-colors">
            (203) 200-0327
          </a>
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li>
            <a href="/services" class="text-gray-300 hover:text-coral-400 transition-colors">
