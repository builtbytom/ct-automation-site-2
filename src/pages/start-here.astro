<script>
  // Simple checkbox counter for engagement
  const checkboxes = document.querySelectorAll('input[type="checkbox"]');
  let checkedCount = 0;
  
  checkboxes.forEach(checkbox => {
    checkbox.addEventListener('change', (e) => {
      if (e.target.checked) {
        checkedCount++;
      } else {
        checkedCount--;
      }
      
      // You could add dynamic messaging based on checked count
      // For now, just tracking for potential analytics
    });
  });
</script>