            <div class="text-3xl">üíî</div>
          </div>
          
          <!-- Visual -->
          <div class="relative bg-gradient-to-br from-gray-100 to-gray-200 rounded-xl p-6 mb-6">
            <!-- Phone notification mockup -->
            <div class="bg-gray-900 rounded-2xl p-4 shadow-xl max-w-sm mx-auto">
              <div class="bg-gray-800 rounded-xl p-3">
                <div class="flex items-center gap-2 mb-3">
                  <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                  <div class="text-xs text-gray-400">Website Lead ‚Ä¢ 9:47 PM</div>
                </div>
                <div class="bg-gray-700 rounded-lg p-3 mb-2">
