---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Contact - Connecticut Business Automation | Let's Fix Your Manual Work" 
  description="Schedule a 15-minute call to discuss your business automation needs. No sales pitch, just honest conversation about what's eating your time."
>
  <Navigation />

  <!-- Hero Section -->
  <section class="relative pt-32 pb-16 px-4">
    <!-- Gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-navy-900 via-navy-800 to-coral-500"></div>
    
    <!-- Pattern overlay -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width="60" height="60" xmlns="http://www.w3.org/2000/svg"%3E%3Cdefs%3E%3Cpattern id="grid" width="60" height="60" patternUnits="userSpaceOnUse"%3E%3Cpath d="M 60 0 L 0 0 0 60" fill="none" stroke="white" stroke-width="0.5"/%3E%3C/pattern%3E%3C/defs%3E%3Crect width="100%25" height="100%25" fill="url(%23grid)" /%3E%3C/svg%3E')"></div>
    </div>

    <!-- Floating icons -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-20 left-10 text-6xl animate-float opacity-20">‚ö°</div>
      <div class="absolute top-40 right-20 text-5xl animate-float animation-delay-1000 opacity-20">ü§ñ</div>
      <div class="absolute bottom-20 left-1/4 text-6xl animate-float animation-delay-2000 opacity-20">üìä</div>
      <div class="absolute bottom-40 right-1/3 text-5xl animate-float animation-delay-3000 opacity-20">‚è∞</div>
    </div>

    <div class="relative z-10 container mx-auto max-w-4xl text-center">
      <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl text-white mb-6 font-bold">
        Let's Have an Honest Conversation
      </h1>
      <p class="text-xl sm:text-2xl text-white/90 mb-8">
        You tell me what's eating your time. I'll tell you how to automate it.
      </p>
      <div class="inline-flex items-center bg-white/10 backdrop-blur-sm rounded-full px-6 py-3 text-white">
        <span class="font-medium">No BS ‚Ä¢ 15 Minutes ‚Ä¢ Real Solutions</span>
      </div>
    </div>
  </section>

  <!-- Main Contact Section -->
  <section class="py-16 sm:py-20 px-4 bg-gray-50">
    <div class="container mx-auto max-w-6xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Left Side - Process & Info -->
        <div class="space-y-8">
          <!-- Google Meet CTA -->
          <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl p-8 border border-green-200">
            <h3 class="font-display text-2xl text-gray-900 mb-4 flex items-center">
              <span class="text-3xl mr-3">üìÖ</span>
              Prefer to Schedule a Quick Call?
            </h3>
            <p class="text-gray-700 mb-6">
              Pick a time that works for you and I'll do my homework on your business before we talk.
            </p>
            <a 
              href="https://calendar.app.google/YOUR_CALENDAR_LINK" 
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition-all hover:scale-105 transform"
            >
              Schedule 15-Minute Call
              <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>

          <!-- How This Works -->
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h3 class="font-display text-2xl text-gray-900 mb-6">How This Works</h3>
            
            <div class="space-y-6">
              <div class="flex items-start">
                <div class="w-8 h-8 bg-coral-500 rounded-full flex items-center justify-center text-white font-bold mr-4 flex-shrink-0 mt-1">
                  1
                </div>
                <div>
                  <h4 class="font-bold text-gray-900 mb-2">You share what's broken</h4>
                  <p class="text-gray-600">Tell me about the repetitive tasks eating your day. No judgment - we've all got them.</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="w-8 h-8 bg-navy-800 rounded-full flex items-center justify-center text-white font-bold mr-4 flex-shrink-0 mt-1">
                  2
                </div>
                <div>
                  <h4 class="font-bold text-gray-900 mb-2">I map out the solution</h4>
                  <p class="text-gray-600">15-minute call where I'll share specific automation ideas for your situation.</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center text-white font-bold mr-4 flex-shrink-0 mt-1">
                  3
                </div>
                <div>
                  <h4 class="font-bold text-gray-900 mb-2">You get a clear roadmap</h4>
                  <p class="text-gray-600">Detailed email with your automation options, timeline & investment (if we're a fit).</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Direct Contact Info -->
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h3 class="font-display text-xl text-gray-900 mb-6">Or reach out directly:</h3>
            
            <div class="space-y-4">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-coral-50 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-5 h-5 text-coral-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <a href="mailto:tom@ctbusinessautomation.com" class="text-gray-900 hover:text-coral-500 font-medium transition-colors">
                  tom@ctbusinessautomation.com
                </a>
              </div>
              
              <div class="flex items-center">
                <div class="w-10 h-10 bg-navy-50 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-5 h-5 text-navy-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <a href="tel:203-200-0327" class="text-gray-900 hover:text-navy-800 font-medium transition-colors">
                  (203) 200-0327
                </a>
              </div>
              
              <div class="flex items-start">
                <div class="w-10 h-10 bg-green-50 rounded-lg flex items-center justify-center mr-4 mt-1">
                  <svg class="w-5 h-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-gray-900 font-medium">Based in North Haven, CT</p>
                  <p class="text-gray-600 text-sm">I'll get back to you within 24 hours (M-F)</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Side - Contact Form -->
        <div class="lg:sticky lg:top-24 h-fit">
          <div class="bg-white rounded-2xl p-8 sm:p-10 shadow-xl">
            <div class="flex items-center mb-8">
              <svg class="w-6 h-6 text-coral-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.956 9.956 0 01-5.754-1.805l-3.077.814a1 1 0 01-1.23-1.23l.814-3.077A9.956 9.956 0 013 12c0-4.97 4.03-9 9-9s9 4.03 9 9z" />
              </svg>
              <h2 class="font-display font-bold text-2xl text-gray-900">Send a message</h2>
            </div>
            
            <form id="contact-form" class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                  Your Name <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-coral-500 focus:border-transparent transition-colors"
                  placeholder="John Smith"
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email <span class="text-red-500">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-coral-500 focus:border-transparent transition-colors"
                  placeholder="john@company.com"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                  Phone (optional)
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-coral-500 focus:border-transparent transition-colors"
                  placeholder="(203) 555-0123"
                />
              </div>

              <div>
                <label for="business-type" class="block text-sm font-medium text-gray-700 mb-2">
                  What kind of business? <span class="text-red-500">*</span>
                </label>
                <select
                  id="business-type"
                  name="business-type"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-coral-500 focus:border-transparent transition-colors"
                >
                  <option value="">Select your industry...</option>
                  <option value="contractor">Contractor/Trades</option>
                  <option value="restaurant">Restaurant/Food Service</option>
                  <option value="home-services">Home Services (Cleaning, Lawn, etc)</option>
                  <option value="professional">Professional Services</option>
                  <option value="retail">Retail/E-commerce</option>
                  <option value="healthcare">Healthcare/Medical</option>
                  <option value="other">Other Service Business</option>
                </select>
              </div>

              <div>
                <label for="biggest-pain" class="block text-sm font-medium text-gray-700 mb-2">
                  What's your biggest time-waster right now? <span class="text-red-500">*</span>
                </label>
                <select
                  id="biggest-pain"
                  name="biggest-pain"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-coral-500 focus:border-transparent transition-colors"
                >
                  <option value="">Select what's eating your time...</option>
                  <option value="chasing-invoices">Chasing invoices & payments</option>
                  <option value="missing-leads">Missing leads when I'm busy</option>
                  <option value="scheduling">Back-and-forth scheduling</option>
                  <option value="data-entry">Entering same info in multiple places</option>
                  <option value="customer-follow-up">Customer follow-up & reminders</option>
                  <option value="inventory">Inventory/order tracking</option>
                  <option value="other">Something else...</option>
                </select>
              </div>

              <div>
                <label for="timeline" class="block text-sm font-medium text-gray-700 mb-2">
                  When do you want this fixed?
                </label>
                <select
                  id="timeline"
                  name="timeline"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-coral-500 focus:border-transparent transition-colors"
                >
                  <option value="asap">Yesterday (ASAP)</option>
                  <option value="month">Within a month</option>
                  <option value="quarter">Next few months</option>
                  <option value="exploring">Just exploring options</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                  Tell me more about what you need automated
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-coral-500 focus:border-transparent transition-colors resize-none"
                  placeholder="Example: I spend 2 hours every Monday sending invoice reminders..."
                ></textarea>
              </div>

              <div class="pt-4">
                <button
                  type="submit"
                  class="w-full bg-coral-500 text-white py-4 px-8 rounded-lg font-semibold hover:bg-coral-400 transition-all hover:scale-105 transform"
                >
                  Send Message
                </button>
                <p class="text-xs text-gray-500 text-center mt-4">
                  I'll get back to you within 24 hours with ideas for your specific situation.
                </p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What to Expect -->
  <section class="py-16 sm:py-20 px-4 bg-white">
    <div class="container mx-auto max-w-4xl">
      <h2 class="font-display text-3xl sm:text-4xl text-center text-navy-900 mb-12">
        What to Expect
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-coral-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">üîç</span>
          </div>
          <h3 class="font-semibold text-lg mb-2">Real Research</h3>
          <p class="text-gray-600">
            If you book a call, I'll check out your business first. Makes our 15 minutes actually useful.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-navy-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">üí¨</span>
          </div>
          <h3 class="font-semibold text-lg mb-2">Straight Talk</h3>
          <p class="text-gray-600">
            No tech jargon. No overselling. Just honest advice about what automation can (and can't) do for you.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">üìã</span>
          </div>
          <h3 class="font-semibold text-lg mb-2">Clear Next Steps</h3>
          <p class="text-gray-600">
            You'll know exactly what's possible, what it costs, and how long it takes. No mysteries.
          </p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  // Mobile menu functionality is now handled by the Navigation component
</script>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  .animation-delay-1000 {
    animation-delay: 1s;
  }
  
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  .animation-delay-3000 {
    animation-delay: 3s;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const form = document.getElementById('contact-form');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    console.log('Form submitted!');
    
    const submitButton = form.querySelector('button[type="submit"]');
    const originalText = submitButton.textContent;
    submitButton.textContent = 'Sending...';
    submitButton.disabled = true;
    
    const formData = new FormData(form);
    
    // Map form fields to expected N8N structure
    const data = {
      name: formData.get('name'),
      email: formData.get('email'),
      phone: formData.get('phone') || '',
      businessName: '', // Not in current form
      businessType: formData.get('business-type'),
      timeline: formData.get('timeline'),
      mainPainPoint: formData.get('biggest-pain'),
      message: formData.get('message') || ''
    };
    
    console.log('Sending data to Netlify function:', data);
    
    try {
      const response = await fetch('/.netlify/functions/contact-form', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
      });
      
      const result = await response.json();
      
      if (result.success) {
        // Show success message
        form.innerHTML = `
          <div class="text-center py-8">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <h3 class="font-display text-2xl text-gray-900 mb-2">Message Sent!</h3>
            <p class="text-gray-600">I'll get back to you within 24 hours with some ideas for your business.</p>
          </div>
        `;
      } else {
        throw new Error('Form submission failed');
      }
    } catch (error) {
      console.error('Form submission error:', error);
      console.error('Error details:', {
        message: error.message,
        stack: error.stack,
        response: error.response
      });
      submitButton.textContent = 'Send Message';
      submitButton.disabled = false;
      alert('Sorry, there was an error sending your message. Please try again or email me directly at tom@ctbusinessautomation.com');
    }
  });
});
</script>